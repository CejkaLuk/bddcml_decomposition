#*********** Compilers
MPFC = mpif90
MPFFLAGS = -g -C -Wall -fbounds-check
#MPFFLAGS = -O3
FC = gfortran 
FFLAGS = -g -C -pg -Wall -fbounds-check
#FFLAGS = -O3

MPCC = mpicc
MPCFLAGS = -g -Wall
#MPCFLAGS = -O3
CC = gcc
CFLAGS = -g -Wall
#CFLAGS = -O3

#*********** Library tools
AR = ar vr
RANLIB = ranlib

#**********Preprocessor defs for calling Fortran from C (-DAdd_ or -DAdd__ or -DUPPER)
CDEFS   = -DAdd_

#*********** Includes
INCPARMETIS = -I/usr/include
INCMUMPS    = -I/usr/include

#*********** Libraries
LIBBDDCML    = -L$(HOME)/mojprg/bddc/lib -lbddcml
LIBMUMPS     = -L/usr/lib -ldmumps-4.9.2
LIBSCALAPACK = -L/usr/lib -lscalapack-openmpi
LIBBLACS     = -L/usr/lib -lblacs-openmpi -lblacsCinit-openmpi -lblacsF77init-openmpi -lblacs-openmpi 
LIBBLAS      = -L/usr/lib -lblas
LIBLAPACK    = -L/usr/lib -llapack
LIBPARMETIS  = -L/usr/lib -lparmetis -lmetis 
LIBMETIS     = -L/usr/lib -lmetis 
LIBPORD      = 
LIBOTHERS    = 

# BLOPEX paths
BLOPEXDIR = $(HOME)/programy/lobpcg/blopex-read-only
INCBLOPEX = \
   -I$(BLOPEXDIR)/blopex_serial_double/multivector \
   -I$(BLOPEXDIR)/blopex_serial_double/pcg_multi \
   -I$(BLOPEXDIR)/blopex_serial_double/matmultivec \
   -I$(BLOPEXDIR)/blopex_abstract/include
OBJBLOPEX = \
   $(BLOPEXDIR)/blopex_serial_double/multivector/multi_vector.o \
   $(BLOPEXDIR)/blopex_serial_double/pcg_multi/pcg_multi.o \
   $(BLOPEXDIR)/blopex_serial_double/matmultivec/matmultivec.o
LIBBLOPEX = -L$(BLOPEXDIR)/blopex_abstract/lib -lBLOPEX
BLOPEXLINK = $(OBJBLOPEX) $(LIBBLOPEX)

